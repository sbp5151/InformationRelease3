<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/btn_check" />

            <stroke
                android:width="0.3dp"
                android:color="@color/button_stroke_colour" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <corners android:radius="4dip"/>
        </shape>

    </item>
    <item android:state_pressed="false" >
        <shape>
            <solid android:color="@color/white" />

            <stroke
                android:width="0.3dp"
                android:color="@color/button_stroke_colour" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <corners android:radius="4dip"/>
        </shape>
    </item>

</selector>