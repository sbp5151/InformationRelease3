<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/backgroud_gray"
              android:id="@+id/ll_feed_back_layout"
              android:orientation="vertical" >


    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_title_height"
        android:id="@+id/feed_back_title"
        layout="@layout/my_titlebar" />

    <EditText
        android:id="@+id/et_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="17dp"
        android:paddingTop="17dp"
        android:background="@color/white"
        android:gravity="top"
        android:hint="@string/input_you_problem"
        android:lines="8"
        android:textColor="@color/black"
        android:textColorHint="@color/graysh"
        android:textSize="16dp" />

    <RelativeLayout
        android:paddingLeft="17dp"
        android:layout_width="wrap_content"
        android:layout_height="27dp">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/problem_type"
            android:textColor="#c69c6d"
            android:textSize="14dp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        android:orientation="vertical" >

        <RelativeLayout
            android:background="@drawable/item_check_bg"
            android:paddingLeft="@dimen/margin_left_layout"
            android:id="@+id/feed_back_suggestion_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/suggest"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                />

            <CheckBox
                android:id="@+id/checkb_feedback_suggest"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:drawableStart="@drawable/selector_checkbox_bg"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/frame_gray"
            />


        <RelativeLayout
            android:background="@drawable/item_check_bg"
            android:paddingLeft="@dimen/margin_left_layout"
            android:id="@+id/feed_back_complaints_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/complaints"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                />

            <CheckBox
                android:id="@+id/checkb_feedback_complaints"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:drawableStart="@drawable/selector_checkbox_bg"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>