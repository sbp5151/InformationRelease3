<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fitsSystemWindows="true"
    tools:context="com.jld.InformationRelease.view.my_program.program_create.ProgramVideoActivity">
   <RelativeLayout android:layout_width="match_parent"
                   android:layout_height="match_parent">

       <include
           android:id="@+id/program_video_title"
           layout="@layout/my_titlebar"
           android:layout_width="match_parent"
           android:layout_height="@dimen/title_height"/>
       <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
           android:id="@+id/rv_program_video_content"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_below="@+id/program_video_title"
       />
       <ImageView
           android:id="@+id/iv_add_video"
           android:layout_width="@dimen/add_button_size"
           android:layout_height="@dimen/add_button_size"
           android:layout_alignParentBottom="true"
           android:layout_alignParentRight="true"
           android:layout_marginRight="@dimen/add_button_margin_right"
           android:layout_marginBottom="@dimen/add_button_margin_botton"
           android:src="@mipmap/add_program" />
   </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
