<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recycler_item_height"
>
    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_item_height"
        android:background="@color/compile_program_head_color"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_compile_head_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="请添加轮播宣传图片"
            android:textSize="18dp"
            android:typeface="serif"/>
        <View android:layout_width="1px"
              android:layout_height="match_parent"
              android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:padding="10dp">
            <ImageButton
                android:id="@+id/bt_compile_head_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/add_selector"/>
        </LinearLayout>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="1px"
          android:layout_alignParentBottom="true"
          android:background="@android:color/darker_gray"/>
</RelativeLayout>
