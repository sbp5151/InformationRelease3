<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/recycler_item_height"
                android:orientation="vertical">
    <View android:layout_width="match_parent" android:layout_height="1px"
          android:layout_alignBottom="@+id/ll_item_img_add"
          android:background="@android:color/darker_gray"
    />
    <LinearLayout
        android:id="@+id/ll_item_img_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_img_path"
            android:layout_width="0dp"
            android:layout_height="@dimen/recycler_item_height"
            android:layout_weight="1"/>
        <View android:layout_width="1px"
              android:layout_height="match_parent"
              android:background="@android:color/darker_gray"/>
        <Button
            android:id="@+id/bt_img_select"
            android:layout_width="55dp"
            android:layout_height="@dimen/recycler_item_height"
            android:background="@null"
            android:text="选择"
            android:textColor="@drawable/text_pressed_color_black"/>
    </LinearLayout>


</RelativeLayout>