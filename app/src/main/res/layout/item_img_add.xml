<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/recycler_item_height"
                  android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_img_path"
            android:layout_width="0dp"
            android:layout_height="@dimen/recycler_item_height"
            android:layout_weight="1"/>
        <View android:layout_width="1px"
              android:background="@android:color/darker_gray"
              android:layout_height="match_parent"/>
        <Button
            android:id="@+id/bt_img_select"
            android:layout_width="55dp"
            android:layout_height="@dimen/recycler_item_height"
            android:background="@null"
            android:textColor="@drawable/text_pressed_color_black"
            android:text="选择"/>
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1px"
          android:background="@android:color/darker_gray"
    />
</LinearLayout>