<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:card_view="http://schemas.android.com/tools"
              xmlns:ard_view="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_model_item"
        android:layout_width="match_parent"
        card_view:cardElevation="5dp"
        card_view:contentPadding="8dp"
        ard_view:cardCornerRadius="10dp"
        android:layout_margin="@dimen/model_item_margin"
        android:layout_height="@dimen/model_item_height">

        <ImageView
            android:id="@+id/iv_model_item"
            android:layout_width="match_parent"
                   android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_model_item"
            android:layout_width="match_parent"
                  android:layout_marginTop="170dp"
                  android:background="#3666"
                  android:gravity="center"
                  android:textSize="16dp"
                  android:layout_height="30dp"/>
    </android.support.v7.widget.CardView>

</LinearLayout>