<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
    >

    <View
        android:id="@+id/toolbar_flag"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true"/>

    <ImageButton
        android:id="@+id/toolbar_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/toolbar_flag"
        android:layout_marginLeft="8dp"
        android:background="@drawable/toolbar_left_click"
        />

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/toolbar_flag"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="title"
        android:textColor="@android:color/white"
        android:textSize="@dimen/bar_title_size"
        />

    <TextView
        android:id="@+id/toolbar_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/toolbar_flag"
        android:layout_marginRight="10dp"
        android:text="@string/compile"
        android:textColor="@drawable/textcolor_click"
        android:textSize="@dimen/bar_right_size"/>

    <ProgressBar
        android:id="@+id/pb_program_upload"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/toolbar_flag"
        android:layout_marginRight="10dp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/toolbar_push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/toolbar_flag"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:background="@drawable/toolbar_right_push_click"
        />
</RelativeLayout>