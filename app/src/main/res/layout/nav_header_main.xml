<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/menu_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/head_back"/>

    <com.jld.InformationRelease.widget.RoundImageViewByXfermode
        android:id="@+id/menu_imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/meizi"/>

    <TextView
        android:id="@+id/menu_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/menu_imageView"
        android:layout_alignRight="@+id/menu_imageView"
        android:layout_below="@+id/menu_imageView"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="meizi"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="piaoliangdemeizi"
        android:visibility="gone"/>

</RelativeLayout>
