<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0000"
>

    <LinearLayout android:layout_width="280dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="13dp"
                  android:layout_marginTop="13dp"
                  android:background="@drawable/dialog_shape"
                  android:orientation="vertical">
        <TextView
            android:id="@+id/dialog1_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_title_height"
            android:gravity="center"
            android:text="@string/device_load_state"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dialog_title_size"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLine"
        />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_program_load_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLine"
        />
        <Button
            android:id="@+id/dialog1_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_bottom_height"
            android:background="@drawable/dialog_right_pre_bg"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="#000"
            android:textSize="16dp"/>
    </LinearLayout>

</RelativeLayout>