<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="55dp"
              android:gravity="center_vertical"
              android:orientation="vertical"
>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">
        <CheckBox
            android:id="@+id/terminal_check"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_terminal_item_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/terminal_check"
            android:gravity="center_vertical"
            android:text="98930630"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tv_terminal_item_state"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/line1"
            android:gravity="center_vertical"
            android:paddingRight="20dp"
            android:text="在线"/>
        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_terminal_item_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/corners_online"
            />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

</LinearLayout>