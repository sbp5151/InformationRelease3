<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_view_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroud_red">

        <View
            android:id="@+id/title_view_cent_flag"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_view_title_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/title_view_cent_flag"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/title_bar_size"/>

        <ImageView
            android:id="@+id/iv_view_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/title_view_cent_flag"
            android:layout_marginTop="@dimen/top_title_back_height"
            android:paddingLeft="12dp"
            android:paddingRight="8dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/back"/>

        <TextView
            android:id="@+id/tv_set_title_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/title_view_cent_flag"
            android:layout_marginTop="@dimen/top_title_back_height"
            android:gravity="center"
            android:paddingRight="18dp"
            android:text="@string/sure"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"/>

    </RelativeLayout>
</RelativeLayout>