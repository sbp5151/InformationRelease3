<?xml version="1.0" encoding="utf-8"?>
<com.jld.InformationRelease.widget.MyRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/text_view"
    tools:context="com.jld.InformationRelease.view.MainActivity">
    <ImageView
        android:id="@+id/iv_preview_back"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/back"
        android:layout_height="match_parent"/>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" android:orientation="vertical">

        <TextView android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:gravity="center"
                  android:text="价目表"
                  android:textColor="@android:color/black"
                  android:textSize="40dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_commodity_1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View android:layout_width="1px"
          android:layout_height="match_parent"
          android:background="#6666"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_img"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"/>
    <View android:layout_width="1px"
          android:layout_height="match_parent"
          android:background="#6666"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" android:orientation="vertical">

        <TextView android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:gravity="center"
                  android:text="价目表"
                  android:textColor="@android:color/black"
                  android:textSize="40dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_commodity_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>
    </LinearLayout>
    </LinearLayout>
</com.jld.InformationRelease.widget.MyRelativeLayout>